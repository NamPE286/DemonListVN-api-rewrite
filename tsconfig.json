{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "_dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*" : ["src/*"],
      "@utils/*" : ["utils/*"],
      "@classes/*" : ["classes/*"],
      "@db" : ["db.ts"]
    },
    "lib": ["ES2021"]
  }
}
