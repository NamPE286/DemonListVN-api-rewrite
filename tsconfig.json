{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*" : ["src/*"],
      "@classes/*" : ["classes/*"],
      "@db" : ["db.ts"]
    },
    "strictPropertyInitialization": false
  }
}
